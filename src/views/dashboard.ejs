<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <title>Dashboard</title>
</head>

<body>
    <main class="container">
        <div class="sidebar_menu">
            <div class="logo_img"></div>
            <div class="menu_links">
                <ul>
                    <li><i class="bi bi-house"></i>Home</li>
                    <li><i class="bi bi-box2"></i>Estoque</li>
                    <li><i class="bi bi-people"></i>Clientes</li>
                    <li><i class="bi bi-inboxes"></i>Pedidos</li>
                </ul>
            </div>
        </div>
        <div class="area_profile">
            <div class="menu_toggle"><i class="bi bi-list"></i></div>
            <div class="profile_info">
                <p class="info_name"></p>
                <p class="info_date"><i class="bi bi-calendar"></i></p>
            </div>
            <img src="" class="profile_img" />
        </div>
        <div class="dashboard_area">
            <div class="summary_cards">
                <div class="card_box">
                    <div class="card_info">
                        <h4>Total Vendas</h4>
                        <p class="card_info_value">666</p>
                    </div>
                </div>
                <div class="card_box">
                    <div class="card_info">
                        <h4>Total Valor</h4>
                        <p class="card_info_value">666R$</p>
                    </div>
                </div>
                <div class="card_box">
                    <div class="card_info">
                        <h4>Total Clientes</h4>
                        <p class="card_info_value">666</p>
                    </div>
                </div>
            </div>

            <div class="graphs">
                <div class="graph">
                    <canvas id="line_chart"></canvas>
                </div>
                <div class="graph">
                    <canvas id="line_chart 1"></canvas>
                </div>
            </div>

            <div class="recent_orders"></div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/public/js/dashboard/dashboard.js"></script>
    <script src="/public/js/global.js"></script>
</body>

</html>
